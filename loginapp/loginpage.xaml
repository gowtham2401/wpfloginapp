<Window x:Class="loginapp.loginpage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginapp"
        mc:Ignorable="d"
        Title="loginpage" Height="450" Width="550" Background="#e2e99a">
    <Border Background="#ffeb00" CornerRadius="20" Margin="30">
        <StackPanel>
        <Label Content="Login Page" HorizontalAlignment="Center" Name="lgnlabel" FontSize="24" Foreground="Black"/>
        <Separator></Separator>
        <Label Content="Username" HorizontalAlignment="Left" Name="usernmae" Margin="5" FontSize="24" Foreground="Black"/>
            <TextBox Name="txtusernmame" Width="400" Height="40" HorizontalAlignment="Center" Margin="5"  Foreground="Black"  FontSize="18"/>
            <Label Content="Password" HorizontalAlignment="Left" Name="password" Margin="5" FontSize="24" Foreground="Black"/>
            <TextBox Name="txtpassword" Width="400" Height="40" HorizontalAlignment="Center" Margin="5" Foreground="Black" FontSize="18"/>
            <Button Name="btnlogin" Click="btnlogin_Click" Content="Login" Width="150" Height="40" Margin="30" Foreground="Black" Background="#e2e99a" FontSize="20" />
        </StackPanel>
    </Border>
</Window>
